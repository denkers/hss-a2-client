<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="30dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="30dp"
    android:background="#FFF"
    tools:context="com.kyleruss.hssa2.client.nav.SettingsFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp"
        android:text="Settings"
        android:id="@+id/settingsViewTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/settingsic"
        android:drawablePadding="15dp"/>


   <!-- <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/profileImageLayout"
        android:layout_below="@id/emailFieldLayout"
        android:layout_marginTop="25dp"
        android:weightSum="2"> -->

    <!--</LinearLayout> -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/nameFieldLayout"
        android:layout_marginTop="80dp"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="Name"
            android:id="@+id/nameDesc"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="10dp"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:hint="Enter your name"
            android:inputType="text"
            android:fontFamily="sans-serif"
            android:id="@+id/nameField"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/emailFieldLayout"
        android:layout_below="@id/nameFieldLayout"
        android:layout_marginTop="10dp"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="Email"
            android:id="@+id/emailDesc"
            android:drawableLeft="@drawable/emailicon"
            android:drawablePadding="10dp"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:hint="Enter a valid email"
            android:inputType="text"
            android:fontFamily="sans-serif"
            android:id="@+id/settingsEmailField"
            android:textSize="14sp"/>
    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settingsSaveBtn"
        android:src="@drawable/savebtn"
        android:layout_below="@+id/emailFieldLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/default_profile"
        android:background="#000"
        android:padding="1dp"
        android:layout_below="@+id/emailFieldLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change profile image"
        android:drawableLeft="@drawable/camera"
        android:drawablePadding="10dp"
        android:layout_below="@+id/emailFieldLayout"
        android:layout_alignParentRight="true"

        android:paddingTop="45dp"/>

</RelativeLayout>

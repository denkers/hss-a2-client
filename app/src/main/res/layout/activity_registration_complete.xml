<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration_complete"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kyleruss.hssa2.client.activity.RegistrationCompleteActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Create your account"
        android:id="@+id/registerTitle"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/usersicon"
        android:drawablePadding="10dp"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/submit_image"
        android:id="@+id/submitBtn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="sendRegisterPackage"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/passwordlock"
        android:ems="10"
        android:layout_marginBottom="25dp"
        android:hint="Enter code"
        android:drawablePadding="10dp"
        android:id="@+id/authCodeField"
        android:layout_above="@+id/submitBtn"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Enter the code sent to your email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/notifications_small_icon"
        android:drawablePadding="10dp"
        android:id="@+id/verificationCodeNotification"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/registerTitle"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
